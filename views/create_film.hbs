{{#extends 'base'}}

{{#block "content"}}
<h1>Add New Film</h1>

<form method="POST">
    <div>
        <label class="form-label">Title</label>
        <input type="text" class="form-control" name="title"/>
    </div>
    <div>
        <label class="form-label">Description</label>
        <textarea class="form-control" name="description"></textarea>
    </div>
    <div>
        <label class="form-label">Actor</label>
        <select name="actor_id" multiple>
            {{#each actors}}
            <option value="{{this.actor_id}}">{{this.first_name}} {{this.last_name}}</option>
            {{/each}}
        </select>
    </div>
    <div>
        <label class="form-label">Release Year</label>
        <input type="text" class="form-control" name="release_year"/>
    </div>
    <div>
        <label class="form-label">Language</label>
        <select name="language_id" class="form-control">
        {{#each languages}}
            <option value="{{this.language_id}}">{{this.name}}</option>
        {{/each}}
        </select>
    </div>
    <div>
        <label class="form-label">Rental Duration</label>
        <input type="text" class="form-control" name="rental_duration"/>
    </div>
    <div>
        <label class="form-label">Replacement Cost</label>
        <input type="text" class="form-control" name="replacement_cost"/>
    </div>


<input type="submit" class="btn btn-primary" value="Add New Film"/>
</form>

{{/block}}

{{/extends}}